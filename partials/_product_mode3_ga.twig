<div class="tile" itemscope itemtype="http://schema.org/Product">
<div class="tile-title"><a href="{{ item.link }}"><span itemprop="name">{{item.title}}</span></a></div>
<div class="tile-img"><a href="{{ item.link }}"><img src="{{ item.image|thumbnail('tileimg') }}" itemprop="image" alt="{{item.img_descr}}"></a></div>
    <div class="tile-content" itemprop="description">{{ item.content }}</div>
    <div class="tile-footer"  itemprop="offers" itemscope itemtype="http://schema.org/Offer">
        <span class="tile-price" itemprop="price">{{ item.price }}</span>        
        <a href="{{ item.affiliatelink }}" target="_blank" rel="nofollow" onClick="ga('send', 'event', 'Affiliate Link', 'Click on \"{{item.title}}\"', '{{item.affiliatelink}}');">{{ l('get-it') }}</a>
        <a href="{{item.link}}">{{ l('details') }}</a>
    </div>
</div>