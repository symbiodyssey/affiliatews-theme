{% extends 'partials/_master.twig' %}

{% block banner %}
<div class="banner">{% setcontent logo = 'block/banner' %}
{% if logo.image is not empty %}
    <img src="{{ image(logo.image) }}"/>
{% endif %}
</div>
{% endblock banner %} 

{% block category %}
    <div class="tiles">
        {% for item in records %}
            {% include 'partials/_product.twig' %}
        {% endfor %}
    </div>
   {{ pager(template = 'partials/_sub_pager.twig') }}
{% endblock category %}
